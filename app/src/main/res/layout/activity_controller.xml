<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Controller">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusLabel"
        android:focusableInTouchMode="false"
        android:text="Status"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All lights"
        android:id="@+id/textView"
        android:layout_below="@+id/statusLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:height="40dp"
        android:gravity="center_vertical" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/btnAllOff"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="100dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/btnAllOn"
        android:layout_toStartOf="@+id/btnAllOff"
        android:width="100dp"
        android:layout_alignTop="@+id/btnAllOff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="White"
        android:id="@+id/textView2"
        android:height="40dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/btnAllOn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/btnWhiteOn"
        android:layout_toStartOf="@+id/btnAllOff"
        android:width="100dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/btnAllOn"
        android:layout_alignStart="@+id/btnAllOn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/btnWhiteOff"
        android:width="100dp"
        android:layout_alignTop="@+id/btnWhiteOn"
        android:layout_alignRight="@+id/btnAllOff"
        android:layout_alignEnd="@+id/btnAllOff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RGB"
        android:id="@+id/textView3"
        android:height="40dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/btnWhiteOn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/btnRGBOn"
        android:layout_toStartOf="@+id/btnAllOff"
        android:width="100dp"
        android:layout_below="@+id/btnWhiteOn"
        android:layout_alignLeft="@+id/btnWhiteOn"
        android:layout_alignStart="@+id/btnWhiteOn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/btnRGBOff"
        android:width="100dp"
        android:layout_below="@+id/btnWhiteOff"
        android:layout_alignLeft="@+id/btnWhiteOff"
        android:layout_alignStart="@+id/btnWhiteOff" />

</RelativeLayout>
